<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.pxl.ccelen.myfridge_cocktails.CocktailFindByNameFragment">

    <EditText
        android:id="@+id/et_findByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/bt_findByName"
        android:hint="Type name here"/>

    <Button
        android:id="@+id/bt_findByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintLeft_toRightOf="@+id/et_findByName"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_findByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_findByName">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>